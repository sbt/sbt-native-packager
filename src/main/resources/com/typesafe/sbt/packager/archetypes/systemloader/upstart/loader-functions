#
# Adding service to autostart
# $1 = service name
#
startService() {
    app_name=$1
    initctl reload-configuration
    service $app_name start
}

#
# Removing service from autostart
# $1 = service name
#
stopService() {
    app_name=$1
    service $app_name stop
}

#
# Restarting the service after package upgrade
# $1 = service name
#
restartService() {
    app_name=$1
    initctl reload-configuration
    service $app_name start
}